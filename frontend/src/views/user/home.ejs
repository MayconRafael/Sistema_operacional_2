<!doctype html>
<html>
    <head>
        <meta charset="utf-8" />
        <link rel="stylesheet" href="css/user.css"/>
        <title>Exemplo de projeto Node, Express e EJS.</title>
        <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    </head>
    <body>

        <div class="topnav">
            <a class="active" href="/home">Home</a>
            <a href="/cadastroreserva">Cadastro Reserva</a>
            <form action="/busca" method="post">
                <input type="submit" value="Buscar">            
                <input type="text" placeholder="Nome da reserva" name=nomeDaSala>
            </form>                      
        </div>


        <div class="corpo">
            <ul>
            <% for(var i=0; i< lista_reservas.length; ++i) { %>        
                <li> 
                    <div class="fundoImg"> 
                        <div class="div1">
                            <img src="<%=lista_reservas[i].foto %>">
                        </div>                 
                        <div class="div2">   
                            <span class="descritor">Nome da sala:</span><br><%=lista_reservas[i].nomeDaSala %>       
                        </div> 
                        <div class="div2">   
                            <span class="descritor">Local da sala:</span><br><%=lista_reservas[i].local %>             
                        </div>   
                        <div class="div2"> 
                            <span class="descritor">Data de uso:</span><br><%=lista_reservas[i].dataDeUso %>          
                        </div>   
                        <div class="div2">
                            <span class="descritor">Hora Início do uso:</span><br><%=lista_reservas[i].horaInicio %>           
                        </div>   
                        <div class="div2">   
                            <span class="descritor">Hora Final do uso:</span><br><%=lista_reservas[i].horaFinal %>          
                        </div>  
                        <div class="div2">  
                            <span class="descritor">Responsável pelo uso:</span><br><%=lista_reservas[i].responsavel %>         
                        </div>                               
                    </div>            
                </li> 
            <% } %>
            </ul>
        </div>

    </body>
</html>